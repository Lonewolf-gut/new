{
  "name": "new-monorepo",
  "private": true,
  "version": "0.0.0",
  "devDependencies": {
    "turbo": "^1.11.3",
    "typescript": "^5.3.0",
    "rimraf": "^5.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "start": "turbo run start --filter=apps/**",
    "lint": "turbo run lint",
    "clean": "rimraf node_modules && rimraf **/node_modules && rimraf .turbo"
  }
}
